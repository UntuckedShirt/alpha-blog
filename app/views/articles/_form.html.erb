<%# this is a form partial%>

<%# In order to display the messages, we add the 
    following code block to the edit.html.erb template.
    This is the same template as new.html%>
<% if @article.errors.any? %>
<h2> The following erros prevented the articles from being saved </h2>>
    <ul>
    <% @article.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
    <% end %>
    </ul>
<% end %>
<%# By specifying @article(instance variable) and this is the edit 
form in the route itll formn a URL to submit request %>
<%= form_with(model: @article, local: true)  do |f| %>

    <p>
    <%# text_field gives a 1 line box%>
        <%= f.label :title %><br/>
        <%= f.text_field :title %>
    </p>

    <p> 
        <%= f.label :description %><br/>
    <%# text_area give an expandable box%>
        <%= f.text_area :description %>
    </p>

    <p>
    <%# creates a submit button%>
        <%= f.submit %>
    </p>

<% end %>